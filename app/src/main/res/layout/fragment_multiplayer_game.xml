<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.54">

            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/player1container"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.59">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/circle_shape"
                        android:id="@+id/player1pic"
                        android:adjustViewBounds="false"
                        android:gravity="center"
                        android:cropToPadding="false"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

                <TextView
                    android:text="Player1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/player1name"
                    android:textAlignment="center"
                    android:layout_below="@+id/player1pic"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="0.59" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player2container"
                android:weightSum="1"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="29dp"
                android:layout_marginEnd="29dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/circle_shape"
                        android:id="@+id/player2pic"
                        android:adjustViewBounds="false"
                        android:cropToPadding="false"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

                <TextView
                    android:text="Player2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/player2name"
                    android:textAlignment="center"
                    android:layout_below="@+id/player2pic"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="0.42" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/tv_container"
            android:layout_width="match_parent"
            android:visibility="gone"
            tools:visibility="gone"
            android:gravity="center"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/tv_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="48sp"
                android:text="completed"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/timer_container"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="30sp"
                android:textColor="@color/colorAccent"
                android:layout_centerInParent="true" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="180dp"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:background="@drawable/circle_shape"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="0"
                android:layout_centerHorizontal="true"
                android:layout_height="180dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_height="50dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:id="@+id/CardViewGreenP1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|center_vertical"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_green_hits_1"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="50dp"
                                android:textColor="@android:color/white"
                                android:layout_margin="@dimen/activity_horizontal_margin"
                                android:textSize="30dp"
                                android:text="0"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_height="50dp"
                        app:cardBackgroundColor="#EF5350"
                        android:id="@+id/CardViewRedP1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|center_vertical"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_red_hits_1"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="50dp"
                                android:textColor="@android:color/white"
                                android:layout_margin="@dimen/activity_horizontal_margin"
                                android:textSize="30dp"
                                android:text="0"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">

                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_height="50dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:id="@+id/CardViewGreenP2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|center_vertical"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_green_hits_2"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="50dp"
                                android:textColor="@android:color/white"
                                android:layout_margin="@dimen/activity_horizontal_margin"
                                android:textSize="30sp"
                                android:text="0" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_height="50dp"
                        app:cardBackgroundColor="#EF5350"
                        android:id="@+id/CardViewRedP2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|center_vertical"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_red_hits_2"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="50dp"
                                android:textColor="@android:color/white"
                                android:layout_margin="@dimen/activity_horizontal_margin"
                                android:textSize="30sp"
                                android:text="0" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_containers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:visibility="visible"
            android:visibility="gone"
            android:layout_gravity="end"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:visibility="visible"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_save_and_new_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="Save &amp; New GAME"/>

                <Button
                    android:id="@+id/btn_save_play_again"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="Save &amp; Play"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_new_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/colorAccent"
                    android:text="New game"/>

                <Button
                    android:id="@+id/btn_play_again"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="Play again"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>