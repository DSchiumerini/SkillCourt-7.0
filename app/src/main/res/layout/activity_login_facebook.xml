<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:name="fiu.com.skillcourt.ui.login.LoginFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginFacebook">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btnOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:layout_below="@+id/btnOut"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="34dp"
        android:id="@+id/userProfilePic" />

    <TextView
        android:text="User ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userProfilePic"
        android:layout_alignLeft="@+id/userProfilePic"
        android:layout_alignStart="@+id/userProfilePic"
        android:layout_marginTop="17dp"
        android:id="@+id/textUserID" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textUserID"
        android:layout_alignLeft="@+id/textUserID"
        android:layout_alignStart="@+id/textUserID"
        android:layout_marginTop="13dp"
        android:id="@+id/textEmail" />


</RelativeLayout>