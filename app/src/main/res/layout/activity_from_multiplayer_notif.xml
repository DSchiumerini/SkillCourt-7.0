<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_from_multiplayer_notif"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fiu.com.skillcourt.ActivityFromMultiplayerNotif">


    <Button
        android:text="Accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accept_button"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:duplicateParentState="false"
        android:background="#4caf50"
        tools:textColor="#FFFFFF"
        android:textColor="#FFFFFF" />

    <Button
        android:text="DECLINE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/decline_button"
        android:layout_marginTop="74dp"
        android:layout_alignTop="@+id/accept_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#EF5350"
        tools:textColor="#FFFFFF"
        android:textColor="#FFFFFF" />

    <TextView
        android:text="Juan invited you to a multiplayer game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:textSize="18sp"
        android:textAlignment="center" />

    <TextView
        android:text="Do you accept the challenge?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:id="@+id/textView3"
        android:textSize="24sp"
        android:layout_above="@+id/accept_button"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:textAlignment="center"
        android:textStyle="normal|bold" />
</RelativeLayout>
